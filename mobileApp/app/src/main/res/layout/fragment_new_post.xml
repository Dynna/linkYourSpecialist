<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newPostFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/olive_background"
    android:foregroundTint="@color/dark_green"
    tools:context=".ui.navigationfragments.posts.NewPostFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:text="Service Name"
                    android:textSize="28dp" />

                <EditText
                    android:id="@+id/serviceName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:outlineAmbientShadowColor="@color/dark_green"
                    android:textColor="@color/dark_green"
                    android:textColorHint="@color/dark_green" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:gravity="center"
                    android:text="Service Category"
                    android:textSize="28dp" />

                <Spinner
                    android:id="@+id/categoriesSpinner"
                    style="@android:style/Widget.Holo.Light.Spinner"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/dark_green"
                    android:fontFamily="@font/cabin"
                    android:popupBackground="@color/dark_olive_button"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin"
                    android:gravity=""
                    android:text="Service Description"
                    android:textSize="28dp" />

                <EditText
                    android:id="@+id/serviceDescription"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/dark_green"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:outlineAmbientShadowColor="@color/dark_green"
                    android:textColor="@color/dark_green"
                    android:textColorHint="@color/dark_green"
                    android:text="my description"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/createPostButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/dark_olive_button"
                    android:fontFamily="@font/cabin"
                    android:onClick="loginUser"
                    android:text="Create Post"
                    app:iconTint="@color/dark_olive_button" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
