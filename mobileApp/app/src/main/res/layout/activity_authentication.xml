<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_activity"
    tools:context=".AuthenticationActivity">

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="138dp"
        android:layout_height="56dp"
        android:layout_marginStart="159dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="143dp"
        android:backgroundTint="#6A7758"
        android:fontFamily="@font/cabin"
        android:shadowColor="@color/black"
        android:text="@string/sign_up"
        app:iconTint="@color/dark_olive_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="startRegistrationActivity"/>

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="107dp"
        android:fontFamily="@font/cabin"
        android:text="Already have an account?"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sign_in_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/cabin"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/haveAccount"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_button"
        app:layout_constraintVertical_bias="1.0"
        android:onClick="startLoginActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>
